<!--Main Navigation-->
<header>
    <!-- Sidebar -->
    <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
        <div class="position-sticky">
            <div class="list-group list-group-flush mx-3 mt-4">
                <a href="/dashboard/" class="list-group-item list-group-item-action py-2 ripple" aria-current="true">
                    <i class="fas fa-tachometer-alt fa-fw me-3"></i><span>Dashboard</span>
                </a>
                <a href="/user/list" class="list-group-item list-group-item-action py-2 ripple"><i
                        class="fas fa-users fa-fw me-3"></i><span>Users</span></a>
                <a href="/booking/" class="list-group-item list-group-item-action py-2 ripple active"><i
                        class="fas fa-calendar-day fa-fw me-3"></i><span>Booking</span></a>
                <a href="/place/list" class="list-group-item list-group-item-action py-2 ripple"><i
                        class="fas fa-map-marker fa-fw me-3"></i><span>Places</span></a>
                <a href="#" class="list-group-item list-group-item-action py-2 ripple"><i
                        class="fas fa-life-ring fa-fw me-3"></i><span>Support</span></a>
                {{#if (isAdmin user.admin)}}
                    <a href="#" class="list-group-item list-group-item-action py-2 ripple"><i
                            class="fas fa-life-ring fa-fw me-3"></i><span>Admin</span></a>
                {{/if}}
            </div>
        </div>
    </nav>
    <!-- Sidebar -->

    <!-- Navbar -->
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
        <!-- Container wrapper -->
        <div class="container-fluid">
            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#sidebarMenu"
                    aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Brand -->
            <a class="navbar-brand" href="/user/{{user.id}}">
                {{user.name}} {{user.surname}}
            </a>
            <!-- Right links -->
            <ul class="navbar-nav ms-auto d-flex flex-row">
                <!-- Notification dropdown -->

                <!-- Avatar -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#"
                       id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                        <img src="https://mdbootstrap.com/img/Photos/Avatars/img (31).jpg" class="rounded-circle" height="22"
                             alt="" loading="lazy" />
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                        <li><a class="dropdown-item" href="/user/profile/{{user.id}}">My profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="/user/user/logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
</header>
<!--Main Navigation-->

<!--Main layout-->
<main style="margin-top: 58px">
    <div class="container pt-4">
        <!-- Section: Main chart -->

        <!-- Section: Main chart -->

        <!--Section: Sales Performance KPIs-->
        {{#if message}}
            <div class="alert alert-primary" role="alert">
                {{message}}
            </div>
        {{/if}}
        <section class="mb-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-box no-header clearfix">
                            <div class="main-box-body clearfix">
                                <div class="table-responsive">
                                    <table class="table user-list">
                                        <thead>
                                        <tr>
                                            <th><span>Place's Name</span></th>
                                            <th><span>Created at</span></th>
                                            <th class="text-center"><span>Status</span></th>
                                            <th><span>Assigned to </span></th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                <td>
                                                    <a href="/user/profile/{{this.id}}" class="user-link">{{this.name}} {{this.surname}}</a>
                                                </td>
                                                <td>{{this.registered}}</td>
                                                <td class="text-center">
                                                    <span class="label label-default">{{this.active}}</span>
                                                </td>
                                                <td>
                                                    <a href="#">{{this.email}}</a>
                                                </td>
                                                <td style="width: 20%;">
                                                    <a style="text-decoration:none" href="/user/profile/{{this.id}}" >
                                                        <button type="button" data-toggle="tooltip" title="Information" class="btn btn-outline-primary"><i class="fas fa-solid fa-info"></i></button>
                                                    </a>
                                                    <a style="text-decoration:none" href="/user/remove/{{this.id}}" >
                                                        <button type="button" data-toggle="tooltip" title="Cancel booking" class="btn btn-outline-danger"><i class="fas fa-solid fa-ban"></i></button>
                                                    </a>
                                                </td>
                                            </tr>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

</main>

