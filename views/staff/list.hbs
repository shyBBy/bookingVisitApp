<div class="container bootstrap snippets bootdey" style="padding-top: 50px; padding-left: 10px">
    {{#if message.successfullUserRemoved}}
        <div class="alert alert-success" role="alert">
            {{message.successfullUserRemoved}}
        </div>
    {{/if}}
    {{#if message.unSuccessfullUserRemoved}}
        <div class="alert alert-danger" role="alert">
            {{message.unSuccessfullUserRemoved}}
        </div>
    {{/if}}
    {{#if message.successfullUserActivated}}
        <div class="alert alert-success" role="alert">
            {{message.successfullUserActivated}}
        </div>
    {{/if}}
    {{#if message.unSuccessfullUserActivated}}
        <div class="alert alert-danger" role="alert">
            {{message.unSuccessfullUserActivated}}
        </div>
    {{/if}}
    {{#if message.unSuccessfulUserRemovedAsLogedUser}}
        <div class="alert alert-danger" role="alert">
            {{message.unSuccessfulUserRemovedAsLogedUser}}
        </div>
    {{/if}}
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                            <tr>
                                <th><span>User</span></th>
                                <th><span>Created</span></th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each staffsList}}
                                <tr>
                                    <td>
                                        <img src={{this.staffPhoto}} alt="">
                                        <a href="/user/profile/{{this.userId}}" class="user-link">{{this.staffName}} {{this.staffSurname}}</a>
                                    </td>
                                    <td>{{this.registered}}</td>
                                    <td style="width: 20%;">
                                        <a style="text-decoration:none" href="/user/profile/{{this.userId}}" >
                                            <button type="button" data-toggle="tooltip" title="Show user's profile." class="btn btn-outline-primary"><i class="fas fa-user"></i></button>
                                        </a>
                                        <a style="text-decoration:none" href="/user/activate/{{this.id}}" >
                                            <button type="button" data-toggle="tooltip" title="Activate user" class="btn btn-outline-success"><i class="fas fa-user-check"></i></button>
                                        </a>



                                        <!-- Button trigger modal -->
                                        <button type="button" onclick="showmodal()" data-toggle="tooltip" title="User options" class="btn btn-outline-primary" data-bs-toggle="modal{{this.id}}" data-bs-target="#modal{{this.id}}">
                                            <i class="fas fa-user-cog"></i>
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="modal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">User options</h5>
                                                        <button type="button" onclick="hidemodal()" class="btn-close" data-bs-dismiss="modal{{this.id}}" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        bedzie tu mozna zmienic komus nick, e-mail, haslo, range i inne tego typu rzeczy
                                                        <select>
                                                            <option value="{{this.name}}">{{this.name}}</option>
                                                            <option value="{{this.id}}">{{this.id}}</option>
                                                        </select>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" onclick="hidemodal()" class="btn btn-secondary" data-bs-dismiss="modal{{this.id}}">Close</button>
                                                        <button type="button" class="btn btn-primary">Save changes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
