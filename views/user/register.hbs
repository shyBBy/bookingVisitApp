<div id="main-wrapper" class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            {{#if message.emptyField}}
            <div class="alert alert-warning" role="alert">
                {{message.emptyField}}
            </div>
            {{/if}}
            {{#if message.successRegister}}
                <div class="alert alert-succes" role="alert">
                    {{message.successRegister}}
                </div>
            {{/if}}
            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="mb-5">
                                    <h3 class="h4 font-weight-bold text-theme">Register</h3>
                                </div>

                                <h6 class="h5 mb-0">Welcome!</h6>
                                <p class="text-muted mt-2 mb-5">Lorem ipsum...</p>

                                <form action="/user/add" method="POST">
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText1">Name</label>
                                        <input type="text" name="name" class="form-control" id="exampleInputEmail1">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText1">Surname</label>
                                        <input type="text" name="surname" class="form-control" id="exampleInputPassword1">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText1">E-mail</label>
                                        <input type="email" name="email" class="form-control" id="exampleInputEmail1">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="exampleInputText1">Password</label>
                                        <input type="password" name="password" class="form-control" id="exampleInputEmail1">
                                    </div>
                                    <button type="submit" class="btn btn-theme">Register</button>
                                </form>
                            </div>
                        </div>

                        <div class="col-lg-6 d-none d-lg-inline-block">
                            <div class="account-block rounded-right">
                                <div class="overlay rounded-right"></div>
                                <div class="account-testimonial">
                                    <h4 class="text-white mb-4">bookingVisitApp</h4>
                                    <p>- Dawid Olczak (shybby) </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end card-body -->
            </div>
            <!-- end card -->

            <p class="text-muted text-center mt-3 mb-0">Back to <a href="/user/login" class="text-primary ml-1">login page</a></p>

            <!-- end row -->

        </div>
        <!-- end col -->
    </div>
    <!-- Row -->
</div>